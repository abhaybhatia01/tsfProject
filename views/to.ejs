<%- include('partials/header')  %> 

<div class="section-title" >
	<h2>Transfer To</h2>
</div>

<div class="table">
    <table data-aos="fade-up" data-aos-delay="300">
        <tr class ="header1">
            <th>Customer Name</th>
            <th>Email</th>
            <th>Balance</th>
            <th>Select</th>
        </tr>
    <% for(let current of customers){ %>

        <% if(!customer._id.equals(current._id)){ %>
            <tr class ="header2">
                <td><%= current.name %></td>
                <td><%= current.email%></td>
                <td><%= current.balance%></td>
	            <td><a class="btn select" href="/customers/<%= customer._id %>/<%= current._id %>">Transfer</a></td>
            </tr>
        <% } %>

    <% } %>
    </table>    
</div>




<%- include('partials/footer')  %> 
